{% extends 'base.html.twig' %}

{% block title %}theWOWGuild{% endblock %}

{% block body %}


<div class="jumbotron jumbotron-fluid" style="background-image: url(https://images8.alphacoders.com/835/835664.jpg); background-size: 100%;">
    <h1 class = "display-2 text-white text-right">Welcome to <br><em class = "text-light text-outline-danger"><span class="border border-danger">theWOWGuild</span></em></h1>
</div>

    {% if app.user == false %}
        <div class="jumbotron">
            <div class="card rounded bg-primary">
                <div class="card-header bg-light">
                    <h2 class="text-center display-6 text-primary">Connect</h2>
                </div>
                <d class="card-body text-center bg-transparent">
                    <h5 class="alert alert-primary">Connect to your Avatar</h5>
                    <p class="alert alert-warning"><em>The Fellowship welcomes you</em></p>
                    <a href="{{ path('app_login') }}" class="btn btn-info align-center btn-outline-light text-dark btn-lg">LOGIN</a>
                </div>
            </div>
        </div>

        <div class="jumbotron">
            <div class="card rounded bg-primary">
                <div class="card-header bg-light">
                    <h2 class="text-center display-6 text-primary">Register</h2>
                </div>
                <div class="card-body text-center bg-transparent">
                    <h5 class="alert alert-primary">Join our Fellowship and take a part</h5>
                    <p class="alert alert-warning"><b>Let's own  Azeroth</b></p>
                    <a href="{{ path('app_register') }}" class="btn btn-lg btn-info btn-outline-light align-center text-dark ">REGISTER</a>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
